<h1>Make A New VendorSweet</h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <p>- <%= error %></p>
    <% end %> 
<% end %>

<%= form_for @vendor_sweet do |f| %>
    <%= f.label :price %>
    <%= f.number_field :price %>
    <%= f.label :sweet_id %>
    <%= f.collection_select :sweet_id, @sweets, :id, :name %>
    <%= f.label :vendor_id %>
    <%= f.collection_select :vendor_id, @vendors, :id, :name %>
    <%= f.submit %>
<% end %>