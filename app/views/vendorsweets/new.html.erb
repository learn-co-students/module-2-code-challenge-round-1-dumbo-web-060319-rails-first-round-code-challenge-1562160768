<h1> Creating Vendorsweet </h1>
<hr>
<% if flash[:errors]%>
    <%flash[:errors].each do |e|%>

    <p>
        <%=e%>
    </p>
    <%end%>

<%end%>
<%=form_for @vendorsweet do |v|%>

    <%=v.label :price%>
    <%=v.number_field :price%>
    <br>
    <%=v.label :sweet_id%>
    <%=v.collection_select :sweet_id, Sweet.all, :id, :name%>
    <br>
    <%=v.label :vendor_id%>
    <%=v.collection_select :vendor_id, Vendor.all, :id, :name%>
    <br>
    <%=v.submit%>

<%end%>